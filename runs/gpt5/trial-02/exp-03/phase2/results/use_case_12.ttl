@prefix : <http://example.com/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix tosl: <https://w3id.org/tosl/> .
@base <http://example.com> .

:ELSEVIER a tosl:Provider ;
    foaf:name "ELSEVIER"^^xsd:string ;
    foaf:homepage <https://dev.elsevier.com/> ;
    dcterms:description "Provider of the Elsevier API Service."^^xsd:string .

:businessCustomer a tosl:BusinessCustomer ;
    dcterms:description "Licensee/Application developer using the Elsevier API Service."^^xsd:string .

:apiService a tosl:Service ;
    dcterms:description "Elsevier API Service."^^xsd:string .

:excessiveUse a odrl:LeftOperand .

:agreement01 a odrl:Agreement ;
    odrl:profile <https://w3id.org/tosl/> ;
    dcterms:source <https://dev.elsevier.com/api_service_agreement.html> ;
    dcterms:title "API SERVICE AGREEMENT"^^xsd:string ;
    dcterms:description "Clause 3.1.3: the Application will avoid excessive and unnecessary use of the API Service that may cause a performance degradation of the API Service."^^xsd:string ;
    dcterms:creator "ELSEVIER"^^xsd:string ;
    dcterms:rightsHolder :ELSEVIER ;
    dcterms:issued "2017"^^xsd:gYear ;
    odrl:prohibition :prohibition01 ;
    odrl:assigner :ELSEVIER .

:prohibition01 a odrl:Prohibition ;
    dcterms:description "The Application must not use the API Service in a manner that is excessive or unnecessary where such use may cause performance degradation of the API Service."^^xsd:string ;
    odrl:action odrl:use ;
    odrl:target :apiService ;
    odrl:assignee :businessCustomer ;
    odrl:constraint [
        a odrl:LogicalConstraint ;
        odrl:and (
            [
                a odrl:Constraint ;
                odrl:leftOperand tosl:effect ;
                odrl:operator odrl:eq ;
                odrl:rightOperand :performanceDegradation
            ]
            [
                a odrl:LogicalConstraint ;
                odrl:or (
                    [
                        a odrl:Constraint ;
                        odrl:leftOperand :excessiveUse ;
                        odrl:operator odrl:eq ;
                        odrl:rightOperand "true"^^xsd:boolean
                    ]
                    [
                        a odrl:Constraint ;
                        odrl:leftOperand tosl:justification ;
                        odrl:operator odrl:neq ;
                        odrl:rightOperand :operationalNeed
                    ]
                )
            ]
        )
    ] .